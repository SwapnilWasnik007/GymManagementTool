
@{
    ViewData["Title"] = "ViewUserAttendance";
}

<style>
    th, td {
        text-align: center;
        height: 50px;
    }

    .sunday {
        background-color: lightgray;
    }

    .present {
        background-color: aqua;
    }

    .absent {
        background-color: red;
    }

    .invalidDate {
        background-color: aliceblue;
    }

    .aParent div {
        float: left;
        clear: none;
    }
</style>


<body onload="SetCalenderCurrentMonth()">
    <input type="hidden" value="@ViewData["currentRegNumber"]" id="txtRegNumber" />
    <div class="card defaultCardWidth m-auto">
        <div class="card-body">
            <div class="row m-auto">
                <div class="col-md-3 mt-1">
                    <center>
                        <label id="lblMonthName" class="font-weight-light border-bottom mb-5" style="font-size: 40px;">November</label>
                        <input type="month" id="txtMonth" name="txtMonth" onload="SetCalenderData(this.value)" onchange="SetCalenderData(this.value)" />

                        <div class="pt-5">
                            Present total
                        </div>
                        <div>
                            <label id="lblTotalPresent">10</label>
                        </div>
                        <div>
                            Absent total
                        </div>
                        <div>
                            <label id="lblTotalAbsent">10</label>
                        </div>
                    </center>
                </div>
                <div class="col-md-9">
                    <div class="aParent">
                        <div class="sunday mb-3" style="width: 20px; height:20px;">
                        </div>
                        <div>
                            <span class="pl-3">Sundays</span>
                        </div>
                        <div class="present ml-3" style="width: 20px; height:20px;">
                        </div>
                        <div>
                            <span class="pl-3">Present</span>
                        </div>
                        <div class="absent ml-3" style="width: 20px; height:20px;">
                        </div>
                        <div>
                            <span class="pl-3">Absent</span>
                        </div>
                    </div>
                    <table class="table table-bordered table-condensed pt-2">
                        <thead>
                            <tr>
                                <th class="">Sunday</th>
                                <th class="monday">Monday</th>
                                <th class="tuesday">Tuesday</th>
                                <th class="wednsday">Wednsday</th>
                                <th class="thursday">Thursday</th>
                                <th class="friday">Friday</th>
                                <th class="saturday">Saturday</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="sunday" id="1">1</td>
                                <td id="2">2</td>
                                <td id="3">3</td>
                                <td id="4">4</td>
                                <td id="5">5</td>
                                <td id="6">6</td>
                                <td id="7">7</td>
                            </tr>
                            <tr>
                                <td class="sunday" id="8">8</td>
                                <td id="9">9</td>
                                <td id="10">10</td>
                                <td id="11">11</td>
                                <td id="12">12</td>
                                <td id="13">13</td>
                                <td id="14">14</td>
                            </tr>
                            <tr>
                                <td class="sunday" id="15">15</td>
                                <td id="16">16</td>
                                <td id="17">17</td>
                                <td id="18">18</td>
                                <td id="19">19</td>
                                <td id="20">20</td>
                                <td id="21">21</td>
                            </tr>
                            <tr>
                                <td class="sunday" id="22">22</td>
                                <td id="23">23</td>
                                <td id="24">24</td>
                                <td id="25">25</td>
                                <td id="26">26</td>
